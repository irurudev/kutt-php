{
  "name": "fromhome/kutt-php",
  "description": "Kutt PHP Client",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Nuradiyana",
      "email": "me@nooradiana.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "FromHome\\Kutt\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FromHome\\Kutt\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.4|^8.0",
    "phpunit/phpunit": "^12.4",
    "psr/log": "^1.1|^3.0",
    "symfony/http-client": "^7.3",
    "symfony/http-client-contracts": "^2.4|^3.0",
    "symplify/easy-coding-standard": "^13.0",
    "vimeo/psalm": "^6.13"
  },
  "scripts": {
    "ecs": "ecs check",
    "ecs-fix": "ecs check --fix",
    "psalm": "psalm",
    "test": "phpunit",
    "check": [
      "@ecs-fix",
      "@psalm",
      "@test"
    ],
    "test-local": "phpunit -c phpunit.local.xml --stop-on-failure",
    "check-local": [
      "@ecs-fix",
      "@psalm",
      "@test-local"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
